rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    // Lost items collection
    match /lostItems/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId || 
                               get(/databases//documents/users/).data.role == 'admin';
    }
    
    // Found items collection
    match /foundItems/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId || 
                               get(/databases//documents/users/).data.role == 'admin';
    }
    
    // Claims collection - NEW
    match /claims/{claimId} {
      allow read: if request.auth != null && 
                    (request.auth.uid == resource.data.itemOwnerId || 
                     request.auth.uid == resource.data.claimantId ||
                     get(/databases//documents/users/).data.role == 'admin');
      allow create: if request.auth != null && request.auth.uid == request.resource.data.claimantId;
      allow update: if request.auth != null && request.auth.uid == resource.data.itemOwnerId;
      allow delete: if request.auth != null && 
                      get(/databases//documents/users/).data.role == 'admin';
    }
  }
}
