rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
   match /users/{userId} {
  allow create: if request.auth != null
                && request.auth.uid == userId
                && !request.resource.data.keys().hasAny(['role']);

  allow read, update: if request.auth != null
                      && request.auth.uid == userId;

  // Only allow role changes if user is already admin
  allow update: if request.auth != null
                && request.auth.uid == userId
                && (!request.resource.data.keys().hasAny(['role'])
                    || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');

  allow delete: if request.auth != null
                && request.auth.uid == userId;
}


    // Lost items collection
    match /lost_items/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == resource.data.userId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }

    // Found items collection
    match /found_items/{itemId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == resource.data.userId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
    }

    // Claims collection
    match /claims/{claimId} {
      allow read: if request.auth != null &&
        (
          request.auth.uid == resource.data.itemOwnerId ||
          request.auth.uid == resource.data.claimantUserId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );

      allow create: if request.auth != null &&
        request.auth.uid == request.resource.data.claimantUserId;

      allow update: if request.auth != null &&
        request.auth.uid == resource.data.itemOwnerId;

      allow delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Contact messages collection
    match /contactMessages/{messageId} {
      allow create: if true; // public contact form
      allow read, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
